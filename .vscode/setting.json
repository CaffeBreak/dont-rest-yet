{
    "python.analysis.extraPaths": [
        "./classroom"
    ],
    "python.analysis.typeCheckingMode": "strict",
    "python.analysis.autoImportCompletions": true,
    "[python]": {
        "editor.defaultFormatter": "ms-python.autopep8",
        "editor.formatOnSave": true
    },
    "autopep8.args": [
        "--indent-size=2",
        "--ignore=E111,E114"
    ],
    "flake8.args": [
        "--ignore=E111,E114"
    ]
}